@model PhoneBook.Models.PhoneBookNode
@{
    ViewData["Title"] = "Изменение пользователя";
}
<form asp-action="Change" asp-controller="PhoneBook" asp-route-id="@Model.Id">
    <p>Suname <input type="text" asp-for="Suname" value="@Model.Suname"/></p>
    <p>Name <input type="text" asp-for="Name" value="@Model.Name" /></p>
    <p>Patronymic <input type="text" asp-for="Patronymic" value="@Model.Patronymic" /></p>
    <p>PhoneNumber <input type="text" asp-for="PhoneNumber" value="@Model.PhoneNumber" /></p>
    <p>Adress <input type="text" asp-for="Adress" value="@Model.Adress" /></p>
    <p>Description <input type="text" asp-for="Description" value="@Model.Description" /></p>
    <p><input type="submit" value="Изменить" /></p>
</form>
